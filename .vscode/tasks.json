{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Current Python File",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": ["${workspaceFolder}/${relativeFile}"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {},
            "problemMatcher": []
        }
    ]
}
